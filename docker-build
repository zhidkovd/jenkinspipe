#!groovy
// Check ub1 properties
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
        }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
        stage("Create site nginx") {
            steps {
                sh 'ssh root@10.128.0.8'
                echo "========Build docker container========"
                dir ('dockerfiles') {
                    sh 'sudo docker build -f Dockerfile -t nginx-site-test-jenkins .'
                }
            }
        }
        stage("Run docker container") {
            steps {
                sh 'ssh root@10.128.0.8'
                sh 'sudo docker run -d -p 80:80 --name site nginx-site-test-jenkins'
            }
        }
    }
}
